<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:paddingBottom="8dp"
    android:layout_height="@dimen/drawer_header_height_with_padding"
    android:minHeight="@dimen/drawer_header_height_with_padding"
    android:clickable="false">

    <RelativeLayout
        android:id="@+id/drawer_header_parent"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/drawer_header_height"
        android:clickable="false"
        android:minHeight="@dimen/drawer_header_height"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp">

        <View
            android:id="@+id/drawer_header"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:minHeight="@dimen/drawer_header_height" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/drawer_header"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@+id/drawer_header"
            android:text="File Manager"
            android:textColor="@color/vectors_white"
            android:textSize="18sp" />

    </RelativeLayout>
</FrameLayout>