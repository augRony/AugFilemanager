<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/notification_service_title_parent_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notification_service_textView_filename_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:ellipsize="middle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/TextAppearance.Compat.Notification.Info"
            />

        <TextView
            android:id="@+id/notification_service_textView_written_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/material_generic"
            android:layout_marginStart="@dimen/material_generic"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            style="@style/TextAppearance.Compat.Notification.Info"
            />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/notification_service_progressBar_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_service_title_parent_small"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginTop="@dimen/material_generic"
        />
</RelativeLayout>